<!-- web.xml helps configure our application when it loads up.-->

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<!--    There are two parts to registering a servlet
        The servlet name and the servlet-mapping
        -->
<!--    This is the first servlet that actually performs user-story work-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/attempt_login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReimbursementServlet</servlet-name>
        <servlet-class>com.servlets.ReimbursementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReimbursementServlet</servlet-name>
        <url-pattern>/api/get_requests/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateRequestServlet</servlet-name>
        <servlet-class>com.servlets.CreateReimbursementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateRequestServlet</servlet-name>
        <url-pattern>/api/create_new_request</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCurrentUserServlet</servlet-name>
        <servlet-class>com.servlets.GetCurrentUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCurrentUserServlet</servlet-name>
        <url-pattern>/api/current_user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateOneEmpFieldServlet</servlet-name>
        <servlet-class>com.servlets.UpdateEmpProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOneEmpFieldServlet</servlet-name>
        <url-pattern>/api/update_emp_field/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAllReqs</servlet-name>
        <servlet-class>com.servlets.GetAllReimbursementsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllReqs</servlet-name>
        <url-pattern>/api/get_all_reqs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResolveRequest</servlet-name>
        <servlet-class>com.servlets.ResolveRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResolveRequest</servlet-name>
        <url-pattern>/api/resolve_request</url-pattern>
    </servlet-mapping>
</web-app>
